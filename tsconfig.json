{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react-jsx", // Habilita JSX
    "resolveJsonModule": true, // Permite la importación de archivos JSON
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Especifica el directorio de salida
    "rootDir": "./", // Cambiar a la raíz del proyecto
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "vite.config.ts"
    
  ],

}